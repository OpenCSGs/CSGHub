<% content_for :meta_title do %>
  <title><%= "#{default_meta_title}" %></title>
<% end %>

<% content_for :meta_desc do %>
  <meta name="description"
        content="<%= "#{default_meta_description}" %>"
  >
<% end %>

<div class="bg-white">
  <application-space-detail
    local-repo-id="<%= @local_application_space&.id %>"
    repo-type="space"
    current-branch="<%= @current_branch || 'main' %>"
    current-path="<%= @current_path || '' %>"
    default-tab="<%= @default_tab || 'summary' %>"
    :action-name="'<%= action_name %>'"
    :settings-visibility="<%= @settings_visibility %>"
    :owner-url="'<%= @owner_url %>'"
    avatar="<%= @avatar_url %>"
    :can-write="<%= !!(@local_application_space && current_user&.can_write?(@local_application_space)) %>"
    user-name="<%= current_user&.name %>"
    :is-admin="<%= @is_admin %>"
    commit-id="<%= @commit_id %>"
    namespace="<%= params[:namespace] %>"
    repo-name="<%= params[:application_space_name] %>"
  >
  </application-space-detail>
</div>
