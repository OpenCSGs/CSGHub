<div class="flex flex-col justify-center py-[24px] xl:px-[20px]">
  <%# banner %>
  <div class="flex justify-center items-center sm:flex-col w-full pl-[36px] pr-[20px] gap-x-[109px] bg-white max-w-[1280px] m-auto mb-[68px]">
    <div class="grow-[1.5]">
      <div class="text-[48px] lg:text-[36px] sm:text-[23px] sm:pt-[10px] text-[#303133] font-semibold mb-[18px]"><%= t('partners.index.banner_text_one') %></div>
      <div class="text-[18px] sm:text-[18px] font-normal leading-[26px]"><%= t('partners.index.banner_text_two') %></div>
      <p class="my-[20px]">
        <a href="partners/apply">
          <button class="bg-black text-white text-[20px] h-[60px] w-[180px] rounded"><%= t('partners.index.to_be_partner') %></button>
        </a>
      </p>
    </div>
    <div class="grow flex justify-center">
      <img src="<%= asset_path('partners/partners_banner.png') %>" class="max-w-[298px]" />
    </div>
  </div>
  <%# cards %>
  <div class="max-w-[1280px] m-auto mb-[10px]">
    <p class="w-[1280px] xl:w-[96vw] sm:w-full text-gray-500 font-light italic"> <%= t('partners.index.sort_alert') %> </p>
  </div>
  <div class="grid grid-cols-4 xl:grid-cols-2 mlg:grid-cols-1 gap-[24px] justify-items-center mb-[60px] max-w-[1280px] m-auto">
    <% @partners.each do |partner| %>
      <partner-card name="<%= partner["name"] %>"
                    site="<%= partner["site"] %>"
                    tags="<%= partner["tags"] %>"
                    desc="<%= partner["desc"] %>"
                    logo="<%= asset_path(partner["logo"]) %>">
      </partner-card>
    <% end %>
  </div>
</div>
