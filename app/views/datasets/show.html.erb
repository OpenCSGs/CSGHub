<% content_for :meta_title do %>
  <title>OpenCSG 传神社区 <%= JSON.parse(@dataset).fetch('data', {}).fetch('nickname', '') || JSON.parse(@dataset).fetch('data', {}).fetch('name', '') %></title>
<% end %>

<% content_for :meta_desc do %>
  <meta name="description"
        content="OpenCSG 传神社区旨在打造一个开源的机器学习模型和数据集共享平台，为AI开发者提供灵活、易用的推理，训练，部署，体验服务，让大模型的应用更简单！<%= JSON.parse(@dataset).fetch('data', {}).fetch('description', '') %>"
  >
<% end %>

<div class="bg-white border-b border-[#EBEEF5]">
  <dataset-detail
    :tags="<%= @tags %>"
    local-repo-id="<%= @local_dataset.id %>"
    :dataset="<%= @dataset %>"
    :last-commit="<%= @last_commit || {} %>"
    :branches="<%= @branches %>"
    current-branch="<%= @current_branch || 'main' %>"
    current-path="<%= @current_path || '' %>"
    default-tab="<%= @default_tab || 'summary' %>"
    :blob="<%= @blob || {} %>"
    :action-name="'<%= action_name %>'"
    :settings-visibility="<%= @settings_visibility %>"
    :owner-url="'<%= @owner_url %>'"
    avatar="<%= @avatar_url %>"
    :can-write="<%= !!current_user&.can_write?(@local_dataset) %>"
  >
  </dataset-detail>
</div>
