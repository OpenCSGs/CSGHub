<div class="max-w-[1280px] m-auto">
  <space-intro star-chain-address="<%= starchain_address %>"></space-intro>
  <% if Space.count == 0 %>
    <div class="flex flex-col xl:px-[20px] sm:mb-[40px]">
      <p><%= t('spaces.index.no_space_alert') %></p>
      <div>
        <p class="mt-5">
          <button onclick="window.open('<%= starchain_address %>', '_blank')" class="flex items-center justify-center group relative h-12 w-48 overflow-hidden rounded-2xl bg-[#1a8b7b] text-lg font-bold text-white">
            StarChain
            <el-icon class="mx-2">
              <arrow-right />
            </el-icon>
            <div class="absolute inset-0 h-full w-full scale-0 rounded-2xl transition-all duration-300 group-hover:scale-100 group-hover:bg-white/30"></div>
          </button>
        </p>
      </div>
    </div>
  <% else %>
    <div>
      <space-cards is-logged-in="<%= logged_in? %>"
                   current-user-login-identity="<%= current_user&.login_identity %>"
                   total-cards=<%= @total_spaces.count %>
                   spaces='<%= @spaces.to_json %>'
      >
      </space-cards>
    </div>
  <% end %>
</div>
