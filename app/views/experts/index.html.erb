<div class="flex justify-center items-center flex-col lg:px-[106px] md:px-[50px] sm:px-[20px]">
  <div class="flex justify-center items-center text-center flex-col max-w-[1280px] not-italic gap-y-[16px] px-[266px] lg:px-[106px] sm:px-[20px] my-[60px]">
    <p><%= t("experts.index.title") %></p>
    <a href="experts/apply">
      <el-button type="info" round><%= t("experts.index.apply_button") %></el-button>
    </a>
  </div>
  <div class="grid grid-cols-3 xl:grid-cols-2 mlg:grid-cols-1 gap-[24px] justify-items-center mb-[60px]">
    <% EXPERTS.each do |expert| %>
      <expert-card name="<%= expert["name"] %>"
                   type="<%= expert["type"] %>"
                   tags="<%= expert["tags"] %>"
                   title="<%= expert["title"] %>"
                   desc="<%= expert["desc"] %>"
                   avatar="<%= asset_path(expert["avatar"]) %>">
      </expert-card>
    <% end %>
  </div>
</div>

